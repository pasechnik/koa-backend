{
  "name": "koa-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run lint && npm run build-ts",
    "build-ts": "tsc",
    "ci": "npm run lint && npm test",
    "clean": "npm run clean:build",
    "clean:build": "rm -rf dist",
    "copy-static-assets": "ts-node src/copyStaticAssets.ts",
    "coverage": "NODE_ENV=TEST NODE_TEST=true jest --coverage || true",
    "dev": "NODE_ENV=development nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/index.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "lint:old": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "start": "node dist/index.js",
    "test": "NODE_ENV=TEST NODE_TEST=true jest",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch",
    "watch-server": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/server.ts",
    "start:mock": "run-p mock-build mock-server --print-label",
    "mock-server": "nodemon ./src/t1/app.js --watch ./src/t1/app.js",
    "mock-build": "tsc -w ./src/t1/app.ts --outDir ./src/t1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pasechnik/koa-backend.git"
  },
  "author": "Volodymyr Pasichnyk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pasechnik/koa-backend/issues"
  },
  "homepage": "https://github.com/pasechnik/koa-backend#readme",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "class-validator": "^0.13.1",
    "delay": "^5.0.0",
    "dotenv": "^8.2.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.0.1",
    "koa-helmet": "^6.1.0",
    "koa-jwt": "^4.0.1",
    "koa-response-time": "^2.1.0",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "koa-swagger-decorator": "^1.7.4",
    "koa2-swagger-ui": "^5.1.0",
    "lodash": "^4.17.21",
    "node-input-validator": "^4.4.1",
    "npm-run-all": "^4.1.5",
    "openapi-types": "^8.0.0",
    "pg": "^8.6.0",
    "raven": "^2.6.4",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^7.0.0-rc.6",
    "swagger-ui-koa": "^0.0.1",
    "typeorm": "^0.2.32",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cron": "^1.7.2",
    "@types/jest": "^26.0.23",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compress": "^4.0.1",
    "@types/koa-helmet": "^6.0.2",
    "@types/koa-response-time": "^2.1.0",
    "@types/koa-router": "^7.4.2",
    "@types/koa__cors": "^3.0.2",
    "@types/koa__router": "^8.0.4",
    "@types/lodash": "^4.14.168",
    "@types/node": "^15.0.2",
    "@types/shelljs": "^0.8.8",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.25.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "shelljs": "^0.8.4",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
